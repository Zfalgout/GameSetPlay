<% provide(:title, 'All users') %>

<%= will_paginate %>

<div class ="jumbotron">
	<h1>All users</h1>

	<%= form_tag(users_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Enter the User's Name" %>
      <%= submit_tag "Search", :name => nil %>
    <% end %>

	<ul class="users">
	    <%= render @users %>
	</ul>

<%= will_paginate %>

</div> 