<% provide(:title, "Join Match") %>

<div class="jumbotron center">

  <h1>Join Match</h1>
    <h2>Match Information</h2>

      <span class="player1">Player 1: <%= User.find_by(id: [@match.player1]).name %></span></br>
      <span class="time">Date and Time: <%= @match.time %></span></br>
      <span class="location">Location: <%= @match.location %></span></br>
      <span class="game_type">Game Type: <%= @match.game_type %></span></br>

      <%= form_for(@match) do |f| %>
        <%#= render 'shared/error_messages' %>
        
      <%#= f.hidden_field :player2, :value => current_user.name %>
      <%= f.label :player2, "I would like to join this match." %>
      <%= f.radio_button :player2, current_user.name, :checked => true, :value => current_user.name %>

        <%#= f.label :player3 %>
        <%#= f.text_field :player3, class: 'form-control' %>

        <%#= f.label :player4 %>
        <%#= f.text_field :player4, class: 'form-control' %>

        <div class = 'thing'>
          <%= f.submit "Join Match", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

  </div>