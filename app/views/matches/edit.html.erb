<% provide(:title, "Update Scores") %>

<div class="jumbotron">

<h1>Update your profile</h1>
  

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@match) do |f| %>
        <%#= render 'shared/error_messages' %>
        
        <%= f.label :score %>
        <%= f.text_field :score, class: 'form-control' %>

        <%= f.label :winner %>
        <%= f.text_field :winner, class: 'form-control' %>

        <%= f.label :loser %>
        <%= f.text_field :loser, class: 'form-control' %>

        <%= f.submit "Submit Scores", class: "btn btn-primary" %>

      <% end %>

      <div class="delete profile">
        <% if current_user?(@user) %>
        <%= link_to "Delete Profile", @user, method: :delete,
                    class: "btn btn-sm btn-danger", data: { confirm: "You sure?" } %>
        <% end %>

      </div
    </div>
  </div>
</div>
</div>