              <li> Total Losses: <%= @player2.losses %>
              <li> Win Percentage: <%= @player2.win_pct %>
              <li> Total Matches Played: <%= @player2.total_matches_played %>
              <li> Tournament Matches Won: <%= @player2.tournament_matches_won %>
              <li> Tournament Matches Lost: <%= @player2.tournament_matches_lost %>
              <li> Tournaments Won: <%= @player2.tournaments_won %>
              <li> Challenges Won: <%= @player2.challenge_matches_won %>
              <li> Challenges Lost: <%= @player2.challenge_matches_lost %>
