<% provide(:title, @user.name) %>

<div class="jumbotron">
	
  <div class="row">
	  <aside class="col-md-4">
	    <section>
	      <h1>
	        <%= gravatar_for @user %>
	        <%= @user.name %>
	      </h1>
	    </section>
	    <section class="stats">
	      <%= render 'users/follow_form' if logged_in? %>
	      <%= render 'shared/stats' %>
	    </section>
	    <section class="user_stats">
	      	<%= render 'users/user_stats' %>
	    </section>
	  </aside>
	  <div class="col-md-8">
	      <h3>Challenges</h3>
	      <ol class="matches">
	        <%= render @matches %>
	        <%#= render @deletedMatches %>
	      </ol>
	      <%= will_paginate @matches %>
	    	
	  </div>
	</div>
</div> 
