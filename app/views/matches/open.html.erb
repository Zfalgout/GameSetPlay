<% provide(:title, "Open Matches") %>

<div class="jumbotron">

  <h1>Open Matches</h1>

  <div class="row">
    <div class="col-md-3 pull-left">
      <%= form_tag(open_path, :method => "get", id: "search-form") do %>
      <%= label :search1, "Find matches by type:" %>
      <%= text_field_tag :search1, params[:search1], placeholder: "Search Matches by Type", value: 0 %>

      <%= label :search2, "Find matches by creator:" %>
      <%= text_field_tag :search2, params[:search2], placeholder: "Search Matches by User", value: 0 %>

      <%= label :search3, "Find matches by zip:" %>
      <%= number_field_tag :search3, params[:search3], placeholder: "Search Matches by Zip", value: 0 %>

      <%= label :search4, "Find matches by date:" %>
      <%= date_field_tag :search4, params[:search4], placeholder: "Search Matches by Date" %>

      <%= submit_tag "Search", :name => nil, class: "btn btn-success btn" %>
    <% end %>
    </div>

    <div class="center col-md-9">
      <ol class="matches">
          <%= render @matches %>
      </ol>
      <%= will_paginate @matches %>
    </div>

  </div>

</div>
