<% provide(:title, 'New Match') %>

<div class="jumbotron">

<h1>Create a new match</h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= form_for(current_user.matches.build) do |f| %>
	      <%= render 'shared/match_error_messages' %>
	      <%= hidden_field_tag :user_id, current_user.id %>
	      <%= hidden_field_tag :player1, current_user.id %>
	    	
	      <%= f.label :player2, "Your Opponent" %>
	      <%= f.number_field :player2, class: 'form-control' %>

	      <%= f.label :location, "The location of the match." %>
	      <%= f.text_area :location, class: 'form-control' %>

	      <%= f.label :time, "The date and time for the match" %>
	      <%= f.datetime_local_field :time, class: 'form-control' %>

	      <%= f.label :game_type, "Is this a singles or doubles match?" %>
	      <%= f.text_field :game_type, class: 'form-control' %>

	    <div class="center">
		  <%= f.label :open, "This is a public match." %>
		  <%= f.radio_button :open, 0, :checked => true, :value => 0 %>

	      <%= f.label :open, "This is a private match." %>
	      <%= f.radio_button :open, 1, :value => 1 %>
	  	</div>
	      <%= f.submit "Create the match", class: "btn btn-primary" %>
	    <% end %>
	  </div>
	</div>

</div>
